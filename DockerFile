FROM python:3.10-slim

WORKDIR /app

# Install only runtime dependencies (no build-essential)
RUN pip install --no-cache-dir \
    fastapi \
    uvicorn \
    torch \
    torchvision \
    pillow

# Copy application code
COPY app/ app/
COPY model.pth .

EXPOSE 8000

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
